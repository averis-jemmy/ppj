<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AbsoluteLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_new"
    tools:context=".LoginActivity" >

    <Button
        android:id="@+id/btnLogin"
        style="@style/main_menu"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="520dp"
        android:background="@drawable/btn_login_bg"
        android:text="" />
    
    <TextView
        android:id="@+id/tvDeviceID"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="530dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text=""
        />
    
    <TextView
        android:id="@+id/tvVersion"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="555dp"
        android:textSize="15dp"
        android:text="1.0.0.0"
        />
    
    <TextView
        android:id="@+id/tvDateTime"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="530dp"
        android:textSize="15dp"
        android:background="@drawable/back"
        android:text=""
        />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="167dp"
        android:layout_height="36dp"
        android:layout_marginLeft="147dp"
        android:layout_marginTop="433dp"
        android:background="@drawable/textbox"
        android:ems="10"
        android:maxLength="8"
        android:numeric="integer"
        android:password="true"
        android:singleLine="true"
        android:textStyle="bold">
        
    </EditText>
 
	<Spinner
        android:id="@+id/spinnerZone"
        android:layout_width="167dp"
        android:layout_height="36dp"
        android:layout_marginLeft="147dp"
        android:layout_marginTop="476dp"
        android:background="@drawable/slim_spinner_normal"
        android:spinnerMode="dropdown" />
     

    <EditText
        android:id="@+id/etUserName"
        android:layout_width="167dp"
        android:layout_height="36dp"
        android:layout_marginLeft="147dp"
        android:layout_marginTop="388dp"
        android:background="@drawable/textbox"
        android:ems="10"
        android:maxLength="8"
        android:numeric="integer"
        android:singleLine="true"
        android:textStyle="bold" >

		<requestFocus />
		</EditText>

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="395dp"
        android:text="ID:"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tvPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="442dp"
        android:text="Password:"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tvZone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="482dp"
        android:text="Bhg/Zon/Unit:"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".PageFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/TrafikLayout">

                <TextView
                    android:id="@+id/tvTrafikNoKenderaan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Kenderaan:"
                    android:textColor="@color/red_base"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/etTrafikNoKenderaan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bordered_textbox"
                    android:padding="5dp"
                    android:layout_margin="10dp"
                    android:inputType="textCapCharacters"
                    android:textStyle="bold"
                    android:maxLength="20" />

                <TextView
                    android:id="@+id/tvTrafikNoCukaiJalan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Cukai Jalan:"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/etTrafikNoCukaiJalan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bordered_textbox"
                    android:padding="5dp"
                    android:layout_margin="10dp"
                    android:inputType="textCapCharacters"
                    android:textStyle="bold"
                    android:maxLength="20" />

                <TextView
                    android:id="@+id/tvTrafikJenama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jenama:"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Spinner
                    android:id="@+id/spinnerTrafikJenama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/slim_spinner_normal"
                    android:spinnerMode="dropdown"/>

                <EditText
                    android:id="@+id/etTrafikVehicleMake"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bordered_textbox"
                    android:padding="5dp"
                    android:layout_margin="10dp"
                    android:inputType="textCapCharacters"
                    android:textStyle="bold"
                    android:maxLength="20"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvTrafikModel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Model:"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Spinner
                    android:id="@+id/spinnerTrafikModel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textStyle="bold"
                    android:background="@drawable/slim_spinner_normal"
                    android:spinnerMode="dropdown"/>

                <EditText
                    android:id="@+id/etTrafikVehicleModel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bordered_textbox"
                    android:padding="5dp"
                    android:layout_margin="10dp"
                    android:inputType="textCapCharacters"
                    android:textStyle="bold"
                    android:maxLength="20"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvTrafikJenisBadan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jenis Badan:"
                    android:textColor="@color/red_base"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Spinner
                    android:id="@+id/spinnerTrafikJenisBadan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/slim_spinner_normal"
                    android:spinnerMode="dropdown"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/btn_camera"
                    style="@style/main_menu"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_kamera_bg"
                    android:layout_centerInParent="true"
                    android:text="" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>